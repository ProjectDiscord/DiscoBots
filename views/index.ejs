                      <% a.tags.slice(0, 3).map(t => { %>
                      <span class="badge bg-secondary me-2 mb-2"><%= t %></span>
                      <% }) %> <% if (a.tags.length > 3) { %>
                      <span class="badge bg-secondary me-2 mb-2"
                        ><i class="bx bx-plus-circle"></i> <%= a.tags.length - 3
                        %> more</span
