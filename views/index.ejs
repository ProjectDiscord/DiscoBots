          <!-- <div class="offset-xl-1"> -->
          <h1 class="h2 text-left">Promoted Bots</h1>
          <span class="fs-sm text-left d-block mb-3"
            >Bots who won a giveaway or made a donation to the server</span
          >
          <div class="accordion">
            <% bots.filter(bot => bot.promote == true && bot.status ===
            "Approved").sort((a, b) => b.votes - a.votes).slice(0, 10).map(a =>
            {%>
            <a
              href="/bot/<%= a.botID %>"
              style="text-decoration: none; color: inherit">
