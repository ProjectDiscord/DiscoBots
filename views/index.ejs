  <body>
    <%- include('partials/spinner') %>
    <main class="page-wrapper border-bottom">
      <%- include('partials/header') %>

      <!-- Hero -->
      <section class="position-relative py-5">
        <!-- Gradient BG -->
        <div
          class="position-absolute top-0 start-0 w-100 h-100 bg-gradient-primary opacity-10"></div>

        <!-- Content -->
        <div
          class="container position-relative zindex-2 py-lg-4"
          style="text-align: center">
          <div class="d-flex flex-column pt-lg-4 pt-xl-5">
            <h5 class="my-2">Welcome!</h5>
            <h1 class="display-3 mb-4">
              Start using
              <span class="text-primary"><%= config.website.name %></span> with
              No Limits
            </h1>
            <p class="fs-lg mb-5">
              <%= config.website.name %> is a free platform to advertise your
              Discord bots and servers. We provide a simple and easy to use
              interface to help you get started.
            </p>
            <div
              class="d-flex align-items-center mb-3 mb-lg-0 pb-4 pb-lg-0 pb-xl-5"
              style="justify-content: center; flex-wrap: wrap;">
              <div class="d-flex me-3">
                <% let topThreeBots = bots.filter(bot => bot.status ===
                "Approved").sort((a, b) => b.votes - a.votes).slice(0, 3); %> <%
                for (let i = 0; i < 3; i++) { %> <% if (topThreeBots[i] !==
                undefined) { %>
                <div
                  class="d-flex align-items-center justify-content-center bg-light rounded-circle"
                  style="width: 52px; height: 52px;">
                  <img
                    src="<%= topThreeBots[i]?.avatar %>"
                    data-bs-toggle="tooltip"
                    data-bs-placement="top"
                    data-bs-title="<%= topThreeBots[i]?.username %>"
                    class="rounded-circle"
                    onclick="window.location.href='/bot/<%= topThreeBots[i]?.botID %>'"
                    style="width: 48px; height: 48px; cursor: pointer; " />
                </div>
                <% } %> <% } %>
              </div>
              <% let bot_count = bots.filter(bot => bot.status ===
              "Approved").sort((a, b) => b.votes - a.votes).slice(0, 3).length
              %>
              <span class="fs-sm"
                >Currently,
                <span class="text-primary fw-semibold"><%= bot_count %></span>
                <% if(bot_count == 0) { %> bots are approved on <%=
                config.website.name %> <% } else if (bot_count == 1) { %> bot is
                approved on <%= config.website.name %> <% } else if (bot_count >
                1) { %> bots are approved on <%= config.website.name %> <%
                }%></span
              >
            </div>
          </div>
        </div>
      </section>

      <section class="container py-5">
        <h2 class="h2 mb-4 pt-lg-2 pb-lg-3 py-1 text-center">Top Tags</h2>
        <ul class="nav nav-tabs justify-content-center">
          <% tags.slice(0,5).map(tag => { %>
          <li class="nav-item">
            <a href="/bots/<%= tag.tag %>" class="nav-link"
              ><%= tag.tag %>
              <span class="badge bg-faded-primary text-primary mx-1"
                ><%= tag.count %></span
              ></a
            >
          </li>
          <% }) %>
        </ul>
        <div class="input-group mb-3">
          <input
            class="form-control"
            type="text"
            id="searchBot"
            placeholder="Search for a bot"
            aria-label="Search for a bot" />
          <button class="btn btn-secondary" type="button" id="searchBotBtn">
            Search
          </button>
        </div>
        <a
          href="/bots"
          class="btn btn-outline-primary my-1 mb-3 w-100"
          type="button"
          >View All Bots</a
        >
        <div class="accordion" id="foundBot"></div>
        <script>
          document.getElementById('searchBotBtn').addEventListener('click', (e) => {
            let searchBot = document.getElementById('searchBot').value;
            if (searchBot == '') return document.getElementById('foundBot').innerHTML = '';
            document.getElementById('searchBotBtn').innerHTML = `<span class="spinner-grow spinner-grow-sm me-2" role="status" aria-hidden="true"><span class="visually-hidden">Searching</span></span>Searching...`;
            fetch("/bots/find/" + searchBot, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
            }).then(res => res.json()).then(data => {
              if (data.error == false) {
                document.getElementById('searchBotBtn').innerHTML = 'Search';
                document.getElementById('foundBot').innerHTML = '';
                data.bots.map(a => {
                  document.getElementById('foundBot').innerHTML += `
                    <a href="/bot/${a.botID}" style="text-decoration: none; color: inherit">
                      <div class="accordion-item border-0 rounded-3 shadow-sm mb-3" style="padding: 10px;">
                        <figcaption class="card-footer d-flex align-items-center border-0 mt-lg-0" style="padding: 3px;">
                          <img src="${a.avatar ?? 'https://cdn.discordapp.com/embed/avatars/0.png'}" width="60" class="rounded-circle" alt="${a.username}">
                          <div class="ps-3">
                            <h6 class="fw-semibold lh-base mb-0">
                              <span class="fw-semibold me-2 mb-2">
                                ${a.username}
                              </span>
                              <span class="badge bg-faded-info text-info me-2 mb-2">Votes: ${a.votes}</span>
                            </h6>
                            <span class="fs-sm text-muted">${a.shortDesc}</span>
                          </div>
                        </figcaption>
                      </div>
                    </a>`
                })
              } else if (data.error == true) {
                document.getElementById('searchBotBtn').innerHTML = 'Search';
                document.getElementById('foundBot').innerHTML = '';
                document.getElementById('foundBot').innerHTML = '<div class="alert alert-danger" role="alert">' + data.message + '</div>';
              }
            });
          })
        </script>
      </section>

      <section class="container">
